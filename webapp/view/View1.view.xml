<mvc:View
    controllerName="ZTM_PREINV_STATUS.controller.View1"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    height="100%"
>
    <App id="app">
        <f:DynamicPage
            id="dynamicPageId"
            headerExpanded="true"
        >
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <Title
                            text="Pre-Invoice Status"
                            level="H2"
                        />
                    </f:heading>
                </f:DynamicPageTitle>
            </f:title>

            <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <f:content>
                        <fb:FilterBar
                            id="filterbar"
                            persistencyKey="myPersKey"
                            useToolbar="false"
                            search=".onSearch"
                            filterChange=".onFilterChange"
                            afterVariantLoad=".onAfterVariantLoad"
                            reset=".onReset"
                            showRestoreButton="true"
                            showClearButton="true"
                            filterBarExpanded="true"
                        >
                            <fb:filterGroupItems>
                                <!-- Filter fields -->
                                <fb:FilterGroupItem
                                    name="IvSfirType"
                                    label="FSD Type"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvSfirType"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4SfirType"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvSfirId"
                                    label="FSD Id"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvSfirId"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4SfirId"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvCreatedOnFrom"
                                    label="Created From"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <DatePicker
                                            id="IvCreatedOnFrom"
                                            value="{view>/filters/IvCreatedOnFrom}"
                                            displayFormat="dd.MM.yyyy"
                                            placeholder="DD.MM.YYYY"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvCreatedOnTo"
                                    label="Created To"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <DatePicker
                                            id="IvCreatedOnTo"
                                            value="{view>/filters/IvCreatedOnTo}"
                                            displayFormat="dd.MM.yyyy"
                                            placeholder="DD.MM.YYYY"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvLifecycle"
                                    label="Lifecycle"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvLifecycle"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4Lifecycle"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvTorId"
                                    label="Freight Order"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvTorId"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4TorId"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvTspId"
                                    label="Carrier"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvTspId"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4TspId"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvPreinvoice"
                                    label="Preinvoice Nr."
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvPreinvoice"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4PreInvoice"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvInvDt"
                                    label="Posting Date"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <DatePicker
                                            id="IvInvDt"
                                            displayFormat="dd.MM.yyyy"
                                            placeholder="DD.MM.YYYY"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvCreatedBy"
                                    label="Created By"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvCreatedBy"
                                            showValueHelp="true"
                                            change="onMultiInputChange"
                                            valueHelpRequest="handleF4CreatedBy"
                                        />
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvExportStatus"
                                    label="Excel Exported?"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvExportStatus"
                                            showValueHelp="true"
                                            showSuggestion="true"
                                            valueHelpRequest="handleF4ExportStatus"
                                            suggest="onSuggestExportStatus"
                                            tokenUpdate="onTokenUpdate"
                                            change="onMultiInputChange"
                                            suggestionItems="{
                                                path: '/SHExportStatusSet',
                                                sorter: { path: 'Text' }
                                            }"
                                        >
                                            <core:Item
                                                key="{Code}"
                                                text="{Text}"
                                            />
                                        </MultiInput>
                                    </fb:control>
                                </fb:FilterGroupItem>

                                <fb:FilterGroupItem
                                    name="IvPrintStatus"
                                    label="Printed?"
                                    groupName="Group1"
                                    visibleInFilterBar="true"
                                >
                                    <fb:control>
                                        <MultiInput
                                            id="IvPrintStatus"
                                            showValueHelp="true"
                                            showSuggestion="true"
                                            valueHelpRequest="handleF4PrintStatus"
                                            suggest="onSuggestPrintStatus"
                                            tokenUpdate="onTokenUpdate"
                                            change="onMultiInputChange"
                                            suggestionItems="{
                                                path: '/SHPrintStatusSet',
                                                sorter: { path: 'Text' }
                                            }"
                                        >
                                            <core:Item
                                                key="{Code}"
                                                text="{Text}"
                                            />
                                        </MultiInput>
                                    </fb:control>
                                </fb:FilterGroupItem>
                            </fb:filterGroupItems>
                        </fb:FilterBar>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>

            <f:content>
                <ScrollContainer
                    width="100%"
                    horizontal="true"
                    vertical="true"
                    focusable="true"
                >
                    <Table
                        id="table"
                        mode="MultiSelect"
                        growing="true"
                        growingThreshold="200"
                        alternateRowColors="true"
                        width="100%"
                        items="{table>/results}"
                    >
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title
                                    text="FSD Documents"
                                    level="H2"
                                />
                                <ToolbarSpacer />
                                <Button
                                    id="archiveButton"
                                    icon="sap-icon://curriculum"
                                    text="Archive Specification"
                                    press="onArchive"
                                />
                                <Button
                                    id="uploadButton"
                                    icon="sap-icon://excel-attachment"
                                    text="Pre-Invoice Upload"
                                    press="openExcelUploadDialog"
                                />
                                <Button
                                    id="printButton"
                                    icon="sap-icon://print"
                                    text="Print Specification"
                                    press="onPrint"
                                />
                                <Button
                                    id="refreshButton"
                                    icon="sap-icon://refresh"
                                    press="onRefresh"
                                />
                                <Button
                                    id="editButton"
                                    icon="sap-icon://edit"
                                    press="onEdit"
                                />
                                <Button
                                    id="saveButton"
                                    icon="sap-icon://save"
                                    text="Save Changes"
                                    press="onSave"
                                />
                                <Button
                                    icon="sap-icon://excel-attachment"
                                    tooltip="Export"
                                    press="onExport"
                                />
                            </OverflowToolbar>
                        </headerToolbar>

                        <!-- Table columns -->
                        <columns>
                            <Column width="100px">
                                <Text text="FSD Type" />
                            </Column>
                            <Column width="120px">
                                <Text text="FSD Id" />
                            </Column>
                            <Column width="120px">
                                <Text text="Preinvoice Nr." />
                            </Column>
                            <Column width="140px">
                                <Text text="Settlement Date" />
                            </Column>
                            <Column width="100px">
                                <Text text="Created On" />
                            </Column>
                            <Column width="100px">
                                <Text text="Lifecycle" />
                            </Column>
                            <Column width="100px">
                                <Text text="Carrier" />
                            </Column>
                            <Column width="150px">
                                <Text text="External Carrier" />
                            </Column>
                            <Column width="150px">
                                <Text text="Invoice Date" />
                            </Column>
                            <Column width="100px">
                                <Text text="Net Amount" />
                            </Column>
                            <Column width="150px">
                                <Text text="Currency" />
                            </Column>
                            <Column width="150px">
                                <Text text="Admin Fee" />
                            </Column>
                            <Column width="150px">
                                <Text text="Plan Discount" />
                            </Column>
                            <Column width="150px">
                                <Text text="Export Status" />
                            </Column>
                            <Column width="100px">
                                <Text text="Print Status" />
                            </Column>
                            <Column width="150px">
                                <Text text="Webarch Status" />
                            </Column>
                        </columns>

                        <!-- Table rows -->
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <ObjectIdentifier text="{table>SfirType}" />
                                    <ObjectIdentifier text="{table>SfirId}" />
                                    <Input
                                        value="{table>Preinvoice}"
                                        editable="{= ${view>/editMode} }"
                                    />
                                    <DatePicker
                                        value="{table>FsdDate}"
                                        valueFormat="yyyy-MM-dd'T'HH:mm:ss"
                                        displayFormat="dd.MM.yyyy"
                                        editable="{= ${view>/editMode} }"
                                    />
                                    <ObjectIdentifier
                                        text="{ path: 'table>CreatedOn', formatter: '.formatDateToDDMMYYYY' }"
                                    />
                                    <ObjectIdentifier
                                        text="{table>Lifecycle}"
                                    />
                                    <ObjectIdentifier text="{table>TspId}" />
                                    <ObjectIdentifier text="{table>BpExt}" />
                                    <ObjectIdentifier
                                        text="{ path: 'table>InvDt', formatter: '.formatDateToDDMMYYYY' }"
                                    />
                                    <ObjectIdentifier
                                        text="{ path: 'table>NetAmount', formatter: '.formatCurrency' }"
                                    />
                                    <ObjectIdentifier
                                        text="{table>DocCurrency}"
                                    />
                                    <ObjectIdentifier
                                        text="{ path: 'table>AdminFee', formatter: '.formatCurrency' }"
                                    />
                                    <ObjectIdentifier
                                        text="{ path: 'table>PlanDisc', formatter: '.formatCurrency' }"
                                    />
                                    <ObjectIdentifier
                                        text="{table>ExportStatus}"
                                    />
                                    <ObjectIdentifier
                                        text="{table>PrintStatus}"
                                    />
                                    <ObjectIdentifier
                                        text="{table>WebarchStatus}"
                                    />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </ScrollContainer>
            </f:content>
        </f:DynamicPage>
    </App>
</mvc:View>